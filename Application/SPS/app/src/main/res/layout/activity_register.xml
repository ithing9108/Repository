<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.sps.detailLend">

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textDetail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textSize="19sp"
        android:id="@+id/textDetail"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:text="Input info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:id="@+id/editText6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:text="Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:layout_marginTop="0dp"
        android:id="@+id/editText7"
        android:layout_below="@+id/editText6"
        android:layout_alignRight="@+id/textDetail"
        android:layout_alignEnd="@+id/textDetail"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:text="Category" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:layout_marginTop="0dp"
        android:id="@+id/editText8"
        android:layout_below="@+id/editText7"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:text="Classification" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:id="@+id/editText9"
        android:text="Date"
        android:layout_below="@+id/editText8"
        android:layout_alignLeft="@+id/editText8"
        android:layout_alignStart="@+id/editText8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:id="@+id/editText10"
        android:text="Price per day"
        android:layout_below="@+id/editText9"
        android:layout_alignLeft="@+id/editText9"
        android:layout_alignStart="@+id/editText9" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/editText11"
        android:hint="insert"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:hint="Appliance"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/editText8"
        android:layout_alignLeft="@+id/editText11"
        android:layout_alignStart="@+id/editText11"
        android:gravity="bottom"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/editText13"
        android:hint="insert"
        android:layout_above="@+id/editText9"
        android:layout_alignLeft="@+id/editText12"
        android:layout_alignStart="@+id/editText12" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/editText14"
        android:hint="insert"
        android:layout_alignTop="@+id/editText9"
        android:layout_alignLeft="@+id/editText11"
        android:layout_alignStart="@+id/editText11"
        android:onClick="onClick"
        android:clickable="true"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/editText15"
        android:hint="insert"
        android:layout_alignTop="@+id/editText10"
        android:layout_toRightOf="@+id/buttBack"
        android:layout_toEndOf="@+id/buttBack" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttBack"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText9"
        android:layout_alignStart="@+id/editText9" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:id="@+id/buttComplete"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText14"
        android:layout_alignStart="@+id/editText14" />

</RelativeLayout>
