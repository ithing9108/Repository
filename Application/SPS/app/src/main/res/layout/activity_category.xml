<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.sps.category">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttCategory"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:text="Category"
        android:textSize="25sp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Books"
        android:id="@+id/buttBook"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/buttCategory"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Electronics"
        android:id="@+id/buttElec"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttBook"
        android:layout_alignLeft="@+id/buttBook"
        android:layout_alignStart="@+id/buttBook" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Furnitures"
        android:id="@+id/buttFurni"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttElec"
        android:layout_alignLeft="@+id/buttElec"
        android:layout_alignStart="@+id/buttElec" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Leisure"
        android:id="@+id/buttLeisure"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttFurni"
        android:layout_alignLeft="@+id/buttFurni"
        android:layout_alignStart="@+id/buttFurni" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttBack"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
