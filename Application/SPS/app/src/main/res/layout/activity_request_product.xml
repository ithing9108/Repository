<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.sps.detailLend">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText22"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="68dp"
        android:text="Select period"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText23"
        android:layout_marginTop="71dp"
        android:text="Date"
        android:layout_below="@+id/editText22"
        android:layout_alignLeft="@+id/editText22"
        android:layout_alignStart="@+id/editText22"
        android:textSize="20dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="TotalPrice"
        android:textSize="20sp"
        android:layout_below="@+id/editText24"
        android:layout_toLeftOf="@+id/editText24"
        android:layout_toStartOf="@+id/editText24"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="100000"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textSize="20sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText24"
        android:layout_alignTop="@+id/editText23"
        android:layout_toRightOf="@+id/editText23"
        android:layout_toEndOf="@+id/editText23"
        android:text="insert"
        android:textSize="20sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttBack"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttRequest"
        android:layout_toStartOf="@+id/buttRequest"
        android:layout_marginBottom="85dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Request"
        android:id="@+id/buttRequest"
        android:layout_alignBottom="@+id/buttBack"
        android:layout_toRightOf="@+id/editText22"
        android:layout_toEndOf="@+id/editText22" />

</RelativeLayout>
