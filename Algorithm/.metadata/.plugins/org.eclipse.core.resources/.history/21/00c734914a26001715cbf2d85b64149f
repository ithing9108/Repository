import java.util.Scanner;

public class Main {

	public static void main(String[] args){
		
		Scanner sc = new Scanner(System.in);
		int testNum;
		int M, N, x, y;
		int answer;
		
		testNum = sc.nextInt();
		for(int i=0; i<testNum; i++){
			M = sc.nextInt();
			N = sc.nextInt();
			x = sc.nextInt();
			y = sc.nextInt();
			answer = -1;
			for(int j=0; j<N; j++){
//				System.out.println(M*j+x +"        "+(M*j+x) % N + "          " + y);
				if(x>=N){
					answer = -1;
					break;
				}
				if((M*j+x) % N ==y){
					answer = M*j+x;
					break;
				}
			}
			
			
			System.out.println(answer);			
		}
	}
}
