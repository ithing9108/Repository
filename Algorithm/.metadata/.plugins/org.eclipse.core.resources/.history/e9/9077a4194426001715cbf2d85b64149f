import java.util.Scanner;

public class Main {

	public static void main(String[] args){
		
		Scanner sc = new Scanner(System.in);
		int testNum;
		int M, N, x, y;
		int tempX, tempY;
		int answer;
		
		testNum = sc.nextInt();
		for(int i=0; i<testNum; i++){
			M = sc.nextInt();
			N = sc.nextInt();
			x = sc.nextInt();
			y = sc.nextInt();
			answer = 1;
			tempX = 1; tempY = 1;
			while (true) {
				if (M == N) { // M과 N이 같은 경우
					if (x == y) {
						answer = x;
						//System.out.println("Break");
						break;
					} else {
						answer = -1;
						//System.out.println("Break");
						break;
					}
				} else { // M과 N이 다른 경우
					if (M - tempX > N - tempY) {
						tempX += N - tempY +1;
						answer += N - tempY +1;
						tempY = 1;
					} else if (M - tempX < N - tempY) {
						tempY += M - tempX +1;
						answer += M - tempX +1;
						tempX = 1;
					} else if (M - tempX == N - tempY) {
						answer += M - tempX +1;
						tempX = 1;
						tempY = 1;
					}
					if (x-tempX == y-tempY){
						answer += x-tempX;
					//	System.out.println("Break");
						break;
					}
					System.out.println(tempX +" "+tempY +"          "+x +" "+y + "      "+answer);
					if(answer>M*N){
						answer = -1;
						break;
					}
					//if(answer>300)return;
				}
				//System.out.println("while-ing");
			}
			System.out.println(answer);			
		}
	}
}
