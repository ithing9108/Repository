
router.get('/send', function(req, res, next) {

    var mailOptions = {
        from: 'user@example.com',
        to: 'user@gmail.com',
        subject: 'hi',
        text: 'nice to meet you.'
    };

    transporter.sendMail(mailOptions, function(error, info) {
        if(error)
            res.json(error);
        else
            res.json(info);
    });

});
